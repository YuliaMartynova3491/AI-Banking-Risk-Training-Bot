# Telegram Bot Token (получите у @BotFather в Telegram)
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# OpenAI API (для LM Studio или другого провайдера)
OPENAI_API_KEY=not-needed
OPENAI_API_BASE=http://localhost:1234/v1
OPENAI_MODEL=your-model-name

# LangSmith (опционально для отладки)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_api_key_if_needed
LANGCHAIN_PROJECT=telegram-ai-trainer

# База данных
DATABASE_URL=sqlite:///data/user_progress.db

# RAG настройки
CHROMA_PERSIST_DIRECTORY=data/chroma_db
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2

# Настройки обучения
MIN_SCORE_TO_PASS=80
QUESTIONS_PER_LESSON=3

# Логирование
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log